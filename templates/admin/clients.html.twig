{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <div class="flex justify-between">
            <h1 class="align-center">Gestion des clients</h1>
        </div>
        <table class="border-separate border border-slate-400 my-5">
            <tr>
                <th class="border border-slate-300">nom</th>
                <th class="border border-slate-300">prenom</th>
                <th class="border border-slate-300">email</th>
                <th class="border border-slate-300">pseudo</th>
                <th class="border border-slate-300">actions</th>
            </tr>
            <tbody>
        {% for client in clients %}
            <tr>
                <td class="border border-slate-300">{{ client.nom }}</td>
                <td class="border border-slate-300">{{ client.prenom }}</td>
                <td class="border border-slate-300">{{ client.email }}</td>
                <td class="border border-slate-300">{{ client.pseudo }}</td>
                <td class="border border-slate-300 flex">
                    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        Modifier
                    </button>
                    <form action="{{ path('app_remove_membres',{'id':client.id}) }}" method="post">
                        <button class="bg-transparent hover:bg-red-500 text-red-700 font-semibold hover:text-white py-2 px-4 border border-red-500 hover:border-transparent rounded" type="submit">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
