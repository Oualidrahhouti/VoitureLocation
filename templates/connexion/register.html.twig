{% extends 'base.html.twig' %}

{% block title %}Hello ConnexionController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        {{ form_start(form) }}

        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4'}}) }}
            </div>
            <div class="md:w-2/3">
                {{ form_widget(form.email, {'attr': {'class': 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500'}}) }}
            </div>
        </div>

        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                {{ form_label(form.pseudo, 'Pseudo', {'label_attr': {'class': 'block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4'}}) }}
            </div>
            <div class="md:w-2/3">
                {{ form_widget(form.pseudo, {'attr': {'class': 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500'}}) }}
            </div>
        </div>

        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                {{ form_label(form.mdp.first, 'Mot de passe', {'label_attr': {'class': 'block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4'}}) }}
            </div>
            <div class="md:w-2/3">
                {{ form_widget(form.mdp.first, {'attr': {'class': 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500'}}) }}
            </div>
        </div>

        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                {{ form_label(form.mdp.second, 'Confirmer mot de passe', {'label_attr': {'class': 'block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4'}}) }}
            </div>
            <div class="md:w-2/3">
                {{ form_widget(form.mdp.second, {'attr': {'class': 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500'}}) }}
            </div>
        </div>

        <div class="md:flex md:items-center flex items-center justify-between">
            <div class="md:w-1/3"></div>
            <div class="md:w-2/3">
                {{ form_widget(form.register, {'attr': {'class': 'shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded'}}) }}
            </div>
        </div>

        <div class="md:flex md:items-center flex items-center justify-between">
            <div class="md:w-1/3"></div>
            <div class="md:w-2/3 my-3">
                <a href="{{ path('app_connexion') }}">Vous avez déjà un compte ? Connectez-vous.</a>
            </div>
        </div>


        {{ form_end(form) }}
    </div>
{% endblock %}
